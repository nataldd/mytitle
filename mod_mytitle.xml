<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" method="upgrade">
    <!-- Названия модуля -->
    <name>mod_ mytitle </name>
    <!-- Дата создания модуля. -->
    <creationDate>May 2017</creationDate>
    <!—Имя автора модуля. -->
    <author>Dolgova Natalia</author>
    <!—Email автора. -->
    <authorEmail>dolgovanatalia@mail.ru </authorEmail>
    <!—Сайт автора. -->
    <authorUrl>http://www.dolgovanatalia.ru</authorUrl>
    <!-- Авторское право. -->
    <copyright>Copyright Info</copyright>
    <!-- Лицензия. -->
    <license>License Info</license>
    <!--  Версия модуля (запишется в БД таблица extension) -->
    <version>0.0.1</version>
    <!-- Описание модуля -->
    <description>Данный модуль запрашивает у БД заголовки материалов опубликованных на сайте и случайным образом выводит три заголовка </description>
    <!—Файловая структура модуля -->
    <files>
        <filename module="mod_mytitle ">mod_ mytitle.php</filename>
        <filename>mod_ mytitle.xml</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <folder>tmpl</folder>
    </files>
    <!-- Конфигурация модуля -->
    <config>
        <fields name="params">
            <!-- Основные параметры для модуля -->
            <fieldset name="basic">
                <field name="text" type="text"
                        label="MOD_MYTITLE_TEXT_FIELD_LABEL"
                        description="MOD_MYTITLE_TEXT_FIELD_DESC" />
            </fieldset>
            <!-- Дополнительные параметры для модуля -->
            <fieldset name="advanced">
                <!-- параметр "layuot", с типом "modulelayout" позволит выбирать соответствующий макет для модуля. -->
                <field name="layout" type="modulelayout"
                        label="JFIELD_ALT_LAYOUT_LABEL"
                        description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
            </fieldset>
        </fields>
    </config>
    <!-- Файлы локализации -->
    <languages folder="language">
        <language tag="ru-RU">ru-RU/ru-RU.mod_mytitle.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.mod_mytitle.sys.ini</language>
    </languages>
</extension> 